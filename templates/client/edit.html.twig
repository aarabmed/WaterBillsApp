
{% extends 'layout.html.twig' %}

{% trans_default_domain 'Client' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %} {{ 'Client.edit' | trans }} {% endblock %}

{% block pageHeader %}
    <div class="page-header">
        <div>
            <h1 class="page-title">
                {{ 'Client.edit.title' | trans }}
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('dashboard') }}"><i class="fe fe-home"></i> Home</a></li>
                <li><a href="{{ path('client_index') }}"> {{ 'Client.index.clients' | trans }} </a></li>
                <li class="active">{{ 'Client.edit.title' | trans }}</li>
            </ol>
        </div>
    </div>

{% endblock %}

{% block content %}
    <div class="row row-cards">
        <div class="col-12">

            <div class="card">
                <div class="card-header isolated">
                    <h3 class="card-title">{{ 'Client.edit.title' | trans}}</h3>
                    <div class="card-options">
                        {{ include('client/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>

            {{ form_start(form) }}

            <div class="card">
                <div class="card-body">
                    <div class="card-body-title">{{ 'Client.show.clientInfo'|trans }}<div class="pull-right"></div></div>
                    <div class="row">
                        <div class="col-md-6 col-sm-12">{{ form_row(form.firstName) }}</div>
                        <div class="col-md-6 col-sm-12">{{ form_row(form.lastName) }}</div>
                        <div class="col-md-6 col-sm-12">{{ form_row(form.cin) }}</div>
                        <div class="col-md-6 col-sm-12">{{ form_row(form.imageFile) }}</div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">{{ form_row(form.address) }}</div>
                        <div class="col-md-6 col-sm-12">{{ form_row(form.phoneNumber) }}</div>
                    </div>
                </div>
            </div>





            <div class="card">
                <div class="card-footer isolated">
                    <div class="d-flex">
                        <a href="{{ path('client_index') }}" class="btn btn-link">{{'Client.actions.cancel'|trans}}</a>
                        <button type="submit" class="btn btn-primary ml-auto"> <i class="fe fe-save"></i> {{'Client.actions.save'|trans}}</button>
                    </div>
                </div>
            </div>

            {{ form_end(form) }}



        </div>
    </div>
{% endblock %}


