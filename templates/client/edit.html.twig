
{% extends 'layout.html.twig' %}

{% trans_default_domain 'client' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %} {{ 'users.edit.title' | trans }} {% endblock %}

{% block pageHeader %}
    <div class="page-header">
        <h1 class="page-title">
            {{ 'client.edit.title' | trans }}
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('client_index') }}"> {{ 'client' | trans }} </a></li>
            <li class="active">{{ 'client.edit.title' | trans }}</li>
        </ol>
    </div>
{% endblock %}

{% block content %}
<div class="row row-cards">
    <div class="col-12">

        <div class="card">
            <div class="card-header isolated">
                <h3 class="card-title">{{ 'client.edit.title' | trans}}</h3>
                <div class="card-options">
                    {{ include('client/_delete_form.html.twig', {text: true }) }}
                </div>
            </div>
        </div>

        {{ form_start(form) }}

        <div class="card">
            <div class="card-body">
                <div class="card-body-title">{{ 'client.show.clientInfo'|trans }}<div class="pull-right"></div></div>
                <div class="row">
                    <div class="col-md-6 col-sm-12">{{ form_row(form.firstName) }}</div>
                    <div class="col-md-6 col-sm-12">{{ form_row(form.lastName) }}</div>
                    <div class="col-md-6 col-sm-12">{{ form_row(form.imageFile) }}</div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 col-sm-12">{{ form_row(form.addresse) }}</div>
                    <div class="col-md-6 col-sm-12">{{ form_row(form.phoneNumber) }}</div>
                    <div class="col-md-6 col-sm-12">{{ form_row(form.counterNumber) }}</div>
                </div>
            </div>
        </div>





        <div class="card">
            <div class="card-footer isolated">
                <div class="d-flex">
                    <a href="{{ path('client_index') }}" class="btn btn-link">{{'client.actions.cancel'|trans}}</a>
                    <button type="submit" class="btn btn-primary ml-auto"> <i class="fe fe-save"></i> {{'client.actions.save'|trans}}</button>
                </div>
            </div>
        </div>

        {{ form_end(form) }}



    </div>
</div>
{% endblock %}


