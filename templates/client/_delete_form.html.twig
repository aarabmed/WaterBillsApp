{% trans_default_domain 'client' %}
<form class="form-btn"  method="post" action="{{ path('client_delete', {'id': client.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
    <button class="btn btn-sm btn-danger">{{'client.actions.delete'|trans}}</button>
</form>
