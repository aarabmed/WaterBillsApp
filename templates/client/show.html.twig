

{% extends 'layout.html.twig' %}

{% trans_default_domain 'client' %}

{% block title %} {{ 'client.show.title' | trans }} {% endblock %}

{% block pageHeader %}
    <div class="page-header">
        <h1 class="page-title">
            {{ 'client.show.title' | trans }}
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('client_index') }}"> {{ 'client' | trans }} </a></li>
            <li class="active">{{ 'client.show.title' | trans }}</li>
        </ol>
    </div>
{% endblock %}



{% block content %}
<div class="row row-cards">
    <div class="col-12">

        <div class="card">
            <!-- Card Header -->
            <div class="card-header isolated">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#student">{{'client.show.clientInfo'|trans}}</a>
                    </li>
                </ul>
                <div class="card-options">
                    <a href="{{ path('client_edit', {'id': client.id}) }}" class="btn btn-sm btn-warning mr-2"><i class="fe fe-edit"></i> {{'edit'|trans({},'actions')}}</a>
                    <a href="{{ path('client_index') }}" class="btn btn-link">{{'back'|trans({},'actions')}}</a>

                    {#                        {{ include('student/_delete_form.html.twig') }}#}
                </div>
            </div>
        </div>

        <div class="card">
            <!-- Card Body -->
            <div class="card-body card-tab">
                <div class="tab-content">
                    <div class="tab-pane container active" id="student">
                        <div class="table-responsive">
                            <div class="pic-info">
                                {% if client.image is not empty %}
                                    <img src="{{ vich_uploader_asset(client, 'imageFile') }}" alt="{{ client.firstName ~' '~ client.lastName }}" />
                                {% else %}
                                    <img alt="" src="/app/img/user.png">
                                {% endif %}
                            </div>
                            <table class="table card-table table-striped table-vcenter show-table">
                                <tbody>
                                <tr>
                                    <th>{{ 'client.id'|trans }}</th>
                                    <td><span class="tag">{{ client.id | lower }}</span></td>
                                </tr>
                                <tr>
                                    <th>{{ 'client.firstname'|trans }}</th>
                                    <td><span class="tag">{{ client.firstName | lower }}</span></td>
                                </tr>
                                <tr>
                                    <th>{{ 'client.lastname'|trans }}</th>
                                    <td>{{ client.lastName }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'client.address'|trans }}</th>
                                    <td>{{ client.addresse}}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'client.phonenumber'|trans }}</th>
                                    <td>{{ client.phoneNumber }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'client.counternumber'|trans }}</th>
                                    <td>{{ client.counterNumber }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    {% endblock %}
